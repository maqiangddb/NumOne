<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="10.0dip"
    android:paddingBottom="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/color_dark_gray"
        android:ellipsize="marquee"
        android:id="@+id/group_buy_description"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:lineSpacingExtra="8.0dip" />
    <ImageView
        android:id="@+id/item_group_image"
        android:background="@drawable/picture_outline"
        android:layout_width="180.0dip"
        android:layout_height="135.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_marginRight="5.0dip"
        android:scaleType="fitXY"
        android:layout_below="@id/group_buy_description"
        android:layout_alignParentLeft="true" />
    <TextView
        android:textSize="22.0sp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:gravity="center_vertical"
        android:id="@+id/sell_price"
        android:background="@drawable/group_price_bg"
        android:paddingRight="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_group_image"
        android:layout_alignTop="@id/item_group_image" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="#ff606060"
        android:id="@+id/group_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_toRightOf="@id/item_group_image"
        android:layout_below="@id/sell_price"
        android:lineSpacingExtra="10.0dip"
        android:visibility="gone"
        />

    <TextView
        android:textSize="17.0sp"
        android:textStyle="bold"
        android:textColor="@color/color_gray_item"
        android:id="@+id/item_group_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="10.0dip"
        android:text="原价"
        android:layout_toRightOf="@id/item_group_image"
        android:layout_below="@id/sell_price"
        />

            <TextView
                android:textSize="17.0dip"
                android:textColor="#fffb6a1d"
                android:gravity="center_vertical"
                android:id="@+id/item_group_price_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_dimen_spacing"
                android:text=""
                android:lines="1"
                android:layout_toRightOf="@id/item_group_price"
                android:layout_alignBaseline="@id/item_group_price"
                />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/divider0"
        android:background="@drawable/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@id/item_group_price_text"
        android:visibility="gone"
        android:layout_alignBaseline="@id/item_group_price_text"
        />

    <TextView
        android:textSize="17sp"
        android:textColor="#ff606060"
        android:textStyle="bold"
        android:id="@+id/item_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:visibility="visible"
        android:text="折扣"
        android:lines="1"
        android:layout_toRightOf="@id/item_group_image"
        android:layout_below="@id/item_group_price"
        />

            <TextView
                android:textSize="17.0dip"
                android:textColor="#fffb6a1d"
                android:gravity="center_vertical"
                android:id="@+id/item_discount_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_dimen_spacing"
                android:text=""
                android:lines="1"
                android:layout_toRightOf="@id/item_discount"
                android:layout_alignBaseline="@id/item_discount"
                />

        <Button
            android:id="@+id/coupon_tele_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_dimen_spacing"
            android:text="82789550,222"
            android:background="@drawable/login_button_selector"
            android:focusable="false"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textStyle="bold"
            android:textColor="@color/color_orange"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="#111111"
            android:drawablePadding="8dip"
            android:layout_marginLeft="4dip"
            android:layout_marginTop="4dip"
            android:gravity="center"
            android:layout_toRightOf="@id/item_group_image"
            android:layout_below="@id/item_discount"
            />
</RelativeLayout>
